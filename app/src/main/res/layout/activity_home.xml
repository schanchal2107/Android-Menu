<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".HomeActivity"
    android:background="@drawable/bf"
    >


    <TextView
        android:id="@+id/idTVWelcome"
        android:layout_width="390dp"
        android:layout_height="146dp"
        android:fontFamily="@font/inknut_antiqua_extrabold"
        android:gravity="center_horizontal|center_vertical"
        android:padding="5dp"
        android:textColor="#F8F7F7"
        android:textSize="20sp" />


    <!--button for logging out of the app-->
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="235dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="231dp"
        android:layout_marginBottom="249dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Click This text to change its color."
        android:textColor="#F6F2F2"
        android:textSize="50dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/idBtnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="517dp"
        android:layout_marginEnd="20dp"
        android:text="@string/logout" />

</RelativeLayout>
